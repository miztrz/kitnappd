<% @page_title = @kitten.name %>

<% if user_signed_in? && @kitten.user_id == current_user.id %>
	<%= link_to 'Edit', edit_kitten_path(@kitten), class:"btn btn-primary btn-block" %>
<% end %>


<p>
	<strong>Owner:</strong>
	<%= @kitten.user.name %>
</p>


<p>
  <strong>Breed:</strong>
  <%= @kitten.breed %>
</p>

<p>
  <strong>Description:</strong>
  <%= @kitten.description %>
</p>

<p>
  <strong>Daily rate:</strong>
  <%= number_to_currency(@kitten.daily_rate) %>
</p>

<%= render 'imagegallery' %>
<%= link_to 'Back', _back_url, class:"btn btn-primary btn-block" %>
<h2>Bookings</h2>
<%= render @kitten.bookings %>
<% unless user_signed_in? && @kitten.user_id == current_user.id %>
<%= render 'bookings/form' %>
<% end %>