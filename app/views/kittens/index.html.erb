<p id="notice"><%= notice %></p>

<h1>Kittens</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Description</th>
      <th>Hourly rate</th>
      <th>Daily rate</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kittens.each do |kitten| %>
      <tr>
        <td><%= kitten.name %></td>
        <td><%= kitten.breed %></td>
        <td><%= kitten.description %></td>
        <td><%= kitten.hourly_rate %></td>
        <td><%= kitten.daily_rate %></td>
        <td><%= kitten.active %></td>
        <td><%= link_to 'Show', kitten %></td>
        <td><%= link_to 'Edit', edit_kitten_path(kitten) %></td>
        <td><%= link_to 'Destroy', kitten, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

