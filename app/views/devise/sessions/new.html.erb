<% @page_title = "Log in" %>

<div class="container user-screens">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>
		<div class="form-group row">
    <%= f.label :email, class: "col-sm-3 col-form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-9", placeholder: "Email" %>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: "col-sm-3 col-form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-9", placeholder: "Password" %>
  </div>
  <div class="form-group row d-flex justify-content-around">
    <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>