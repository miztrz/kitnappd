<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<h2>Log in</h2>
		<%= render "devise/shared/error_messages", resource: resource %>
		<div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-10", placeholder: "Email" %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-10", placeholder: "Password" %>
  </div>

  <div class="form-group row d-flex justify-content-around">
    <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
	<div class="container row d-flex justify-content-around">
		<%= render "devise/shared/links" %>
	</div>
</div>