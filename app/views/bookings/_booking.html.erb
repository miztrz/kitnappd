<% if user_signed_in? && (current_user.id == booking.user_id || current_user.id == booking.kitten.user_id) %>
<div class="container">
	<table>
		<tr>
			<th>Title<br></th>
			<th><%= booking.title %><br></th>
		</tr>
		<tr>
			<td>Kitten</td>
			<td><%= booking.kitten.name %></td>
		</tr>
		<tr>
			<td>Booking User</td>
			<td><%= booking.user.name %></td>
		</tr>
		<tr>
			<td>Kitten Owner</td>
			<td><%= booking.kitten.user.name %></td>
		</tr>
		<tr>
			<td>Start Date / Time</td>
			<td><%= booking.start_time %></td>
		</tr>
		<tr>
			<td>End Date / Time</td>
			<td><%= booking.end_time %></td>
		</tr>
		<tr>
			<td>Total Charge</td>
			<td><%= number_to_currency(booking.total) %></td>
		</tr>
		<tr>
			<td>Confirmed<br></td>
			<td><%= booking.accepted %></td>
		</tr>
	</table>
</div>
<% end %>